<Window x:Class="Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Orientation="Horizontal">
        <Button Margin= "10">Button1</Button>
        <Button Margin= "10">Button2</Button>
        <Button Margin= "10">Button3</Button>

        <Canvas  x:Name="Spielfeld" Background="BlueViolet" Width="400" Height="400">
            <Canvas Canvas.Top="50" Canvas.Left="50" Background="BlanchedAlmond" Width="50" Height="50"></Canvas>
            <Canvas Canvas.Top="100" Canvas.Left="50" Background="BlanchedAlmond" Width="50" Height="50"></Canvas>
            <Canvas Canvas.Top="50" Canvas.Left="100" Background="BlanchedAlmond" Width="50" Height="50"></Canvas>
        </Canvas>
    </StackPanel>
    
</Window>
